<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>


  
  <div class="form-group">
<label for="exampleInputEmail1">名前:</label>
  <%= f.text_area :name, :class =>"form-control" , :id =>"exampleInputEmail1", :rows => "1" %>
</div>

  <div class="form-group">
   <label for="exampleInputEmail2">内容:</label>
  <%= f.text_area :body , :class => "form-control", :id => "exampleInputEmail2", :rows => "1"%>
</div>
  
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>

