<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>


<form class="form-horizontal">
  <div class="form-group">
    <label for="message_name">名前:</label>
    <div class="col-sm-10">
      <%= f.text_field :name, :class =>"form-control"%>
    </div>
  </div>

  <div class="form-group">
    <label for="message_body">内容:</label>
    <div class="col-sm-10">
      <%= f.text_area :body , :class => "form-control", :rows => "3"%>
    </div>
  </div>
  
  <div class="form-group">
    <label for="message_age">年齢:</label>
    <div class="col-sm-10">
      <%= f.text_field :age , :class => "form-control"%>
    </div>
  </div>
</div>
  
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>

